<section id="gallery">
    <h1>Gallery</h1>

    {{#if publications}}
    <article class="gallery-container">
        {{#each publications}}
        {{>publication-gallery}}
        {{/each}}
        <!--If there are art publications in the database, show each of them-->
        {{else}}

        <article class="no-available-publications">
            <h1>No publications created yet.</h1>
            <a href="/posts/create" class="create-pub">Create publication</a>
        </article>
        {{/if}}

    </article>
</section>