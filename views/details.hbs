<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br>{{post.title}}</h2>
            <h3>Author: {{post.author.username}}</h3>
            <h3>Painting technique: {{post.paintingTech}}</h3>
            <h3>Certificate of authenticity: {{post.certificate}}</h3>

            <!-- If there is no registered user, do not display buttons-->

            <div class="buttons">
                {{#if username}}
                {{#if isAuthor}}
                <!-- Only for registered user and author of the publication -->
                <a href="/posts/{{post._id}}/edit" class="btn-edit">Edit</a>
                <a href="/posts/{{post._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                {{#if isShared}}
                <!-- logged in user who has already shared the publication-->
                <p class="shared-pub">You already shared this publication</p>
                {{else}}
                <!-- logged in user who has not yet shared the publication-->
                <a href="/posts/{{post._id}}/share" class="btn-share">Share publication</a>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>




        </article>

        <article class="details-card-image">
            <img src="{{post.imgUrl}}" alt="art-image2">
        </article>

    </article>
</section>